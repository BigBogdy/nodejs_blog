<%- include('../partials/header'); -%>
<div class="blog-container compose-container">
    <form id="post-form" method="post" action="/edit/<%= post.id %>?_method=PUT">
        <div class="col-md-12">
            <h1 class="post-title compose-hero">
                Write Something ..
            </h1>
            <input type="text" name="title" class="compose-input title-input" placeholder="Your post title" value="<%= post.title %>"/>
            <textarea placeholder="Your post content goes here...." name="content" type="text"
                class="compose-input"><%= post.content %></textarea>
        </div>
        <div class="col-md-12">
            <button type="submit" class="read-more publish-btn">
                Publish
            </button>
        </div>
    </form>
</div>
